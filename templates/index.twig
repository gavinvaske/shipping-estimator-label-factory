    function sendAjaxRequest() {
        let csrfToken = window.csrfTokenValue

        alert('Before AJAX');

        $.ajax({
            type: 'post',
            url: '',
            headers: {
                "X-CSRF-Token" : csrfToken,
            },
            data:
                {
                    'action' : 'shipping-estimator/shipping/do-something',
                },
            dataType: 'json',
            success: function(response) {
                if (response.success) {
                    triggerEvent('success: ', response);
                }
